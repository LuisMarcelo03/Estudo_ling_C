#include <stdio.h>

#define texto "Sua Biografia:"

int main(){
   int idade = 0;
   float altura = 0.0;
   char nome[50] ="";
   
   printf("digite sua idade:\n");
   scanf("%d", &idade);
   
   printf("digite sua altura:\n");
   scanf("%f",&altura);
   
   printf("digite seu nome:\n");
   scanf("%s", nome);
   
   
   printf("Dados informados:\n");
   printf("Idade: %d.\n", idade);
   printf("Altura: %.2f.\n", altura);
   printf("Nome: %s.\n", nome);
}
